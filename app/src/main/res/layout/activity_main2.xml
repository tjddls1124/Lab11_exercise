<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.tjddl.lab11_exercise.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f6d2f1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:text="메뉴 이미지 변경 간격(초)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="5dp"
            android:id="@+id/Edit_sec"
            android:layout_width="wrap_content"
            android:text=""
            android:hint="초를 입력하세요"
            android:layout_height="wrap_content" />
        <Button
            android:text="처음으로"
            android:onClick="onClick"
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:textSize="25dp"
        android:textColor="#25ec64"
        android:text="오늘 뭐 먹을까?"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:onClick="onClick"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewSec"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
